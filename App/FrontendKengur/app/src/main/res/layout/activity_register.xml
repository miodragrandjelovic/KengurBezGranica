<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_39sdp"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="Registracija"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp" />

    </LinearLayout>


   <!-- <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/registerpanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/registerpanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_38sdp"
        android:paddingRight="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_ime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/inter"
                android:hint="Ime"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_prezime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/inter"
                android:hint="Prezime"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/input_field_huge"
            android:fontFamily="@font/inter"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <FrameLayout
            android:id="@+id/fl_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/input_field_huge"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Škola"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/input_field"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_7sdp" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="Razred"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />


            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_mesto"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/input_field"
                android:fontFamily="@font/inter"
                android:hint="Mesto rođenja"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_sifra"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/input_field_huge"
            android:fontFamily="@font/inter"
            android:hint="Šifra"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <ImageButton
            android:id="@+id/ib_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/register_btn" />

    </LinearLayout>




  <!--  </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>