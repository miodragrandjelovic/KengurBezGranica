<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_25sdp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@color/leaderboard_item_color">

        <TextView
            android:id="@+id/item_l_rank"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_l_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/avatarplaceholder" />

        <TextView
            android:id="@+id/item_l_name"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Miodrag Randjelovic"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />

        <TextView
            android:id="@+id/item_l_score"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="45.3"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>